<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<div class="show-item">
  <%= render @report %>
</div>

<div class="show-item">
  <h2><%= Report.human_attribute_name(:comments) %></h2>
  <% @report.comments.includes(:user).order(created_at: "DESC").each do |comment| %>
    <%= render "share/comment", {commentable: @report, comment:} %>
  <% end %>
</div>

<div class="show-item">
  <%= render "share/comment_form", {commentable: @report, commentable_type_name: 'report'} %>
</div>

<nav class="page-nav">
  <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)), reports_path %>
  <% if @report.user_id == current_user.id %>
    | <%= link_to t('views.common.edit', name: Report.model_name.human.downcase), edit_report_path(@report) %>

    <%= button_to t('views.common.destroy', name: Report.model_name.human.downcase), @report, method: :delete %>
  <% end %>
</nav>
